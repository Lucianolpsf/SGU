<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Távilla Victória</title>

    
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/lib/swiper/swiper-bundle.min.css" rel="stylesheet">
    <link href="~/lib/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">
    
    <link rel="stylesheet" href="~/css/index.css">
       

</head>

<body>
    
    @* <script src="~/lib/js/main.js"></script> *@
    <header id="header" class="fixed-top">
        <div class="container d-flex align-items-center">

            <h1 class="logo me-auto"><a href="/Home/Index#hero" class="bem-vindo">Távila Victória</a></h1>
            <!-- Uncomment below if you prefer to use an image logo -->
            <!-- <a href="index.html" class="logo me-auto"><img src="assets/img/logo.png" alt="" class="img-fluid"></a>-->

            <nav id="navbar" class="navbar order-last order-lg-0">
                <ul>
                    <li class="nav-item">
                        <a href="/Home/Index#hero">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a href="/Home/Index#about">Sobre</a>
                    </li>
                    <li class="nav-item">
                        <a href="/Home/Index#services">Serviços</a>
                    </li>
                    <li class="nav-item">
                        <a href="/Home/Index#gallery">Galeria</a>
                    </li>
                    <li class="nav-item">
                        <a href="/Home/Index#contact">Fale Conosco</a>
                    </li>
                   
                    
                    @if (Context.Session.GetString("UsuarioTipo") == "administrador" ||
                    Context.Session.GetString("UsuarioTipo") ==
                    "cliente")
                    {
                        <!-- Se o usuário estiver autenticado, exibe o dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle user-loged" href="#" id="usuarioDropdown" role="button"
                                data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                @Context.Session.GetString("UsuarioNome")
                            </a>
                            <div class="dropdown-menu" aria-labelledby="usuarioDropdown">
                              
                                @if (Context.Session.GetString("UsuarioTipo") == "administrador")
                                {

                                    <a class="nav-item" href="/Usuario/Index" class="clientes">Clientes</a>
                           
                                }
                                @if (Context.Session.GetString("UsuarioTipo") == "administrador")
                                {

                                    <a href="/Agendamento/Index" class="nav-item">Agendamento</a>
                          
                                }
                                    <a class="nav-item" .sair" href="/Usuario/Logout" onclick="fazerLogout()">Sair</a>

                            </div>
                        </li>
                    }
                    else
                    {
                        <!-- Se o usuário não estiver autenticado, exibe o link de login -->
                        <li class="nav-item">
                            <a href="/Usuario/Login">Login</a>
                        </li>
                    }

                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav><!-- .navbar -->

        </div>
    </header><!-- End Header -->


    <main role="main" class="pb-3">
        @RenderBody()
    </main>


    <footer id="footer">

        <div class="container">

            <div class="me-md-auto text-center">
                <div class="copyright">
                    <p>
                        <small>
                            &copy; Copyright <strong><span>Tavilla Victória Extensão de Cílios</span></strong>. Todos os
                            Direitos Reservados - Desenvolvido por GomesTechnology
                        </small>
                    </p>
                </div>
                <div class="credits">
                    <!-- All the links in the footer should remain intact. -->
                    <!-- You can delete the links only if you purchased the pro version. -->
                    <!-- Licensing information: https://bootstrapmade.com/license/ -->
                    <!-- Purchase the pro version with working PHP/AJAX contact form: https://bootstrapmade.com/medilab-free-medical-bootstrap-theme/ -->
                    <p><small>Designed by <a href="https://bootstrapmade.com/">BootstrapMade</a></small></p>
                </div>
            </div>

        </div>
    </footer><!-- End Footer -->
    <div id="preloader"></div>
    <a href="#" class="back-to-top d-flex align-items-center justify-content-center">
        <i class="bi bi-arrow-up-short"></i>
    </a>

    <script src="~/lib/swiper/swiper-bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/main.js"></script>
    <script src="~/js/validate.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
