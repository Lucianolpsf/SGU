                <div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="tab-login">
                    <form>
                        
                        <div class="form-outline mb-4">
                            <div class="mb-3 d-flex align-items-center">
                                <input id="data_agdt" type="text" class="form-control" style="width: 300px;" placeholder="Escolha a data do agendamento" oninput="consultarAgendamento()">
                            </div>
                        </div>

                        <!-- Email input -->
                        <div class=" form-outline mb-4">
                            @Html.DropDownList("DropServico", ViewBag.AgtSevicos, "Escolha o Serviço", new { @class = "chosen-select form-control", @style = "width:420px;" })
                        </div>

                        <div class="mb-3 d-flex align-items-center">
                            <input type="checkbox" id="chk08" class="form-check-input" value="08:00" style="margin-right: 10px;" data-group="horario" disabled>
