@using Microsoft.AspNetCore.Http

@model SGU.Models.UsuarioVM

@{
    Layout = null;
}
@{
    // Obter o valor da variável de sessão UsuarioTipo
    var usuarioId = Context.Session.GetString("UsuarioId");
}

<!DOCTYPE html>
