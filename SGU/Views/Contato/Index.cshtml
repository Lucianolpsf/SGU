@model IEnumerable<SGC.Models.ContatoVM>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/SGU.styles.css" asp-append-version="true" />
<link href="~/Tema/assets/vendor/fontawesome-free/css/all.min.css" rel="stylesheet">
<link href="~/Tema/assets/vendor/animate.css/animate.min.css" rel="stylesheet">
<link href="~/Tema/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
<link href="~/Tema/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
<link href="~/Tema/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
<link href="~/Tema/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
<link href="~/Tema/assets/vendor/remixicon/remixicon.css" rel="stylesheet">
<link href="~/Tema/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">




<section id="services" class="services">
    <div class="container">
        
        <h1 class="section-title" style="padding: 80px; max-height:20px;">Lista de Contatos</h1>
        <div class="custom_container">
            <button class="btn btn-default btn-lg" data-bs-toggle="modal" data-bs-target="#InserirUsuario" style=" margin-left: auto;">
                <i class="fa fa-plus"></i> Adicionar novo Contato
            </button>
        <table class="table table-sm table-striped ">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Email</th>
                    <th scope="col">Telefone</th>
                    <th>Editar</th>
                    <th>Excluir</th>

                    <th scope="col"></th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                    <tr id=item.id>
                        <th scope="row">@item.Id</th>
                        <td>@item.Nome</td>
                        <td>@item.Email</td>
                        <td>@item.Telefone</td>
                        <td class="text-center ">
                            <button class="btn btn-default" onclick="" data-bs-toggle="modal" data-bs-target="#EditarUsuario">

                                <i class="fa fa-edit"></i>   <!--Linha para adicionar o icone-->
                            </button>
                        </td>
                        <td class="text-center ">
                            <button class="btn btn-default" onclick="" data-bs-toggle="modal" data-bs-target="#ExcluirUsuario">
                                <i class="fa fa-trash text-danger"></i>
                            </button>
                        </td>
                    </tr>

                }


            </tbody>
        </table>
    </div>

    <div class="modal fade" id="InserirUsuario" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="mb-3">
                            <label for="nome">Nome</label>
                            <input type="text" class="form-control" placeholder="Digite seu nome...">

                        </div>
                        <div class="mb-3">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" placeholder="Digite seu email...">

                        </div>
                        <div class="mb-3">
                            <label for="telefone">Telefone</label>
                            <input type="text" class="form-control" placeholder="Digite seu telefone...">

                        </div>


                        <button type="submit" class="btn btn-primary">Adicionar</button>
                        <a class="btn btn-secondary " asp-controller="Contato" asp-action="Index" role="button   ">Voltar</a>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="EditarUsuario" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="mb-3">
                            <label for="nome">Nome</label>
                            <input type="text" class="form-control" placeholder="Digite seu nome...">

                        </div>
                        <div class="mb-3">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" placeholder="Digite seu email...">

                        </div>
                        <div class="mb-3">
                            <label for="telefone">Telefone</label>
                            <input type="text" class="form-control" placeholder="Digite seu telefone...">

                        </div>


                        <button type="submit" class="btn btn-primary">Alterar</button>
                        <a class="btn btn-secondary " asp-controller="Contato" asp-action="Index" role="button   ">Voltar</a>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="ExcluirUsuario" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="mb-3">
                            <label for="nome">Nome</label>
                            <input type="hidden" id="IdExc" class="form-control" placeholder="Digite seu nome..." readonly>

                        </div>
                        <div class="mb-3">
                            <label for="nome">Nome</label>
                            <input type="text" class="form-control" placeholder="Digite seu nome..." readonly>

                        </div>
                        <div class="mb-3">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" placeholder="Digite seu email..." readonly>

                        </div>
                        <div class="mb-3">
                            <label for="telefone">Telefone</label>
                            <input type="text" class="form-control" placeholder="Digite seu telefone..." readonly>

                        </div>


                        <button type="submit" class="btn btn-primary">Alterar</button>
                        <a class="btn btn-secondary " asp-controller="Contato" asp-action="Index" role="button   ">Voltar</a>
                    </form>
                    
                        
                </div>
                <div class="modal-footer">
                        
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
        <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
        <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/Tema/assets/vendor/purecounter/purecounter_vanilla.js"></script>
        <script src="~/Tema/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="~/Tema/assets/vendor/glightbox/js/glightbox.min.js"></script>
        <script src="~/Tema/assets/vendor/swiper/swiper-bundle.min.js"></script>
        <script src="~/Tema/assets/vendor/php-email-form/validate.js"></script>

        <!-- Template Main JS File -->
        <script src="~/Tema/assets/js/main.js"></script>
        
    </div>

</section>
</div>
   
    

